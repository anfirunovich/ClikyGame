<Window x:Class="clicky__game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clicky__game"
        mc:Ignorable="d"
        Title="Clicky Game" Height="450" Width="800" Background="White" Foreground="Black">
    <Canvas Name="MyCanvas" MouseLeftButtonDown="CanvasClicking">
        <Canvas.Background>
            <ImageBrush ImageSource="4.jpg"/>
        </Canvas.Background>

        <Label Name="txtScore" FontSize="20" FontWeight="Bold" Content="Score: 0" Foreground="White" />
            <Label Name="txtLastScore" FontSize="20" FontWeight="Bold" Foreground="#FFFF70FF" Content="Last Score: 0" Canvas.Left="180" />
            <Rectangle Stroke="Black" Name="healthBar" Width="350" Fill="Red" Height="27" Canvas.Left="433" Canvas.Top="10" />
    </Canvas>
</Window>
